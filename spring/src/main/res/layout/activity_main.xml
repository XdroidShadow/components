<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xdroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/xdToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />


                <Button
                    android:id="@+id/xdNotification1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="普通通知" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userNameContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="用户名" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/xdTest"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/whitesmoke"
                android:text="字体大小"
                android:textSize="@dimen/font_size_s"
                android:visibility="gone" />


            <Button
                android:id="@+id/xdTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="translate" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@color/whitesmoke"
                android:orientation="vertical">

                <com.xdroid.spring.example.android.ui.customview.TEST_ViewTouch
                    android:id="@+id/xdViewTouch"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:background="@color/gray_10" />


            </LinearLayout>

            <com.xdroid.spring.example.android.ui.customview.TEST_TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/whitesmoke"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/app_name"
                android:visibility="gone" />


            <com.xdroid.spring.example.android.ui.customview.TEST_CustomView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/whitesmoke"
                android:padding="20dp"
                android:visibility="gone"
                xdroid:innerColor="@color/green" />


            <!--    测试手势冲突-->
            <com.xdroid.spring.example.android.ui.customview.TEST_HorizontalViewGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ListView
                    android:id="@+id/lv_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ListView
                    android:id="@+id/lv_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.xdroid.spring.example.android.ui.customview.TEST_HorizontalViewGroup>



            <com.xdroid.spring.example.android.ui.customview.TEST_MeasureView
                android:layout_marginTop="10dp"
                android:layout_width="200sp"
                android:layout_height="20dp"
                android:background="@color/whitesmoke"
                android:minWidth="100dp" />



            <com.xdroid.spring.example.android.ui.customview.TEST_MeasureView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/whitesmoke"
                android:minWidth="100dp" />


        </LinearLayout>

<!--    </ScrollView>-->

</LinearLayout>